<?xml version="1.0" encoding="UTF-8"?>
<!--
Installer for Hazelcast Server
Author: Thanh Ba Nguyen
-->
<project name="HazelcastServer Installer" default="install">
	<description>
        Installer for HazelcastServer.
    </description>

	<property environment="env" />

	<!-- directory properties -->
	<property name="dir.build" value="../build" />
	<property name="dir.resources" value="../resources" />
	<property name="dir.resources.scripts" value="${dir.resources}/scripts" />
	
	<!--
	<property name="resources-lib.dir" value="${resources.dir}/lib" />
	<property name="resources-groovy.dir" value="${resources.dir}/groovy" />
	-->

	<target name="install" description="Install HazelcastServer">
		<input message="Install to location?" addproperty="install.dir" />

		<!-- check if installation directory exists -->
		<available type="dir" file="${install.dir}" property="install.dir.exists" />
		<if>
			<istrue value="${install.dir.exists}" />
			<then>
				<input message="${install.dir} already exists, override?" addproperty="install.dir.override" validargs="y,n" defaultvalue="y" />
				<if>
					<equals arg1="${install.dir.override}" arg2="y" />
					<then>
						<property name="continue.installing" value="true" />
					</then>
					<else>
						<property name="continue.installing" value="false" />
					</else>
				</if>
			</then>
			<else>
				<property name="continue.installing" value="true" />
			</else>
		</if>

		<if>
			<istrue value="${continue.installing}" />
			<then>
				<mkdir dir="${install.dir}" />
				<copy todir="${install.dir}" overwrite="true">
					<fileset dir="${dir.build}" />
				</copy>

				<copy overwrite="true" file="${dir.resources.scripts}/server.sh" tofile="${install.dir}/bin/server.sh" />
				<copy overwrite="true" file="${dir.resources.scripts}/server_start.bat" tofile="${install.dir}/bin/server_start.bat" />

				<replace file="${install.dir}/bin/server.sh" token="@@HAZELCAST_SERVER_HOME@@" value="${install.dir}" />
				<replace file="${install.dir}/bin/server_start.bat" token="@@HAZELCAST_SERVER_HOME@@" value="${install.dir}" />

				<!-- make .sh files executable on UNIX system -->
				<chmod dir="${install.dir}/bin" perm="711" includes="**/*.sh" />

				<!-- set the operating system test properties -->
				<condition property="isMac">
					<os family="mac" />
				</condition>
				<condition property="isWindows">
					<os family="windows" />
				</condition>
				<condition property="isUnix">
					<os family="unix" />
				</condition>

				<echo message="HazelcastServer has been installed to ${install.dir}." />
				<if>
					<isset property="isUnix" />
					<then>
						<echo message="Unix system: remember to chmod ${install.dir} properly!" />
					</then>
				</if>
			</then>
		</if>
	</target>
</project>
